@model Teste_Aptidao_UGB.Model.Models.Produtos

@{
    ViewData["Title"] = "Editar produto";
}


<h4>Editar produto</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PrcodigoEan"></label>
                <input asp-for="PrcodigoEan" class="form-control" readonly />
                <span asp-validation-for="PrcodigoEan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prdescricao"></label>
                <input asp-for="Prdescricao" class="form-control" />
                <span asp-validation-for="Prdescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrprecoUnitario"></label>
                <input asp-for="PrprecoUnitario" class="form-control" />
                <span asp-validation-for="PrprecoUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrcotaMinimaEstoque"></label>
                <input asp-for="PrcotaMinimaEstoque" class="form-control" />
                <span asp-validation-for="PrcotaMinimaEstoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrcodUnidade"></label>
                <select class="form-select" asp-for="PrcodUnidade" asp-items="@ViewBag.PrcodUnidade">
                    <option selected value="">Selecione a unidade</option>
                </select>
                <span asp-validation-for="PrcodUnidade" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <button class="btn-sm btn-success"><i class="fa fa-save"></i>&nbsp; Salvar</button>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        //Lógica utilizada para exibir as mensagens de sucesso ou erro ao salvar os dados.
        var mensagem = "@ViewData["Mensagem"]";
        var mensagemErro = "@ViewData["MensagemErro"]";
    </script>

    <script>
        if (mensagem != "") {
            MensagemOK(mensagem);
        }
        if (mensagemErro != "") {
            MensagemErro(mensagemErro);
        }
    </script>
}
