@model Teste_Aptidao_UGB.Model.Models.Depositos

@{
    ViewData["Title"] = "Novo depósito";
}

<h4>Novo depósito</h4>
<hr />
@{
    if (ViewData["Mensagem"] != null)
    {
        <a asp-action="Create" class="btn-sm btn-primary"> <i class="fa fa-plus"></i>&nbsp; Novo depósito</a>
    }
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dedescricao" class="control-label"></label>
                <input asp-for="Dedescricao" class="form-control" />
                <span asp-validation-for="Dedescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn-sm btn-success"><i class="fa fa-save"></i>&nbsp; Salvar</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        var mensagem = "@ViewData["Mensagem"]";
        var mensagemErro = "@ViewData["MensagemErro"]";
    </script>

    <script>
        //Lógica utilizada para exibir as mensagens de sucesso ou erro ao salvar os dados.
        if (mensagem != "") {
            MensagemOK(mensagem);
        }
        if (mensagemErro != "") {
            MensagemErro(mensagemErro);
        }
    </script>
}
