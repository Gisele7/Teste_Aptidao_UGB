@model Teste_Aptidao_UGB.Model.Models.Unidade

@{
    ViewData["Title"] = "Editar unidade";
}


<h4>Editar unidade</h4>
<hr />
@{
    if (ViewData["Mensagem"] != null)
    {
        <a asp-action="Create" class="btn-sm btn-primary"> <i class="fa fa-plus"></i>&nbsp; Nova unidade</a>
    }
}
<div class="row">
    <form asp-action="Edit">
        <input asp-for="Uncodigo" type="hidden" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Undescricao"></label>
            <input asp-for="Undescricao" class="form-control" />
            <span asp-validation-for="Undescricao" class="text-danger"></span>
        </div>
        <br />
        <div class="form-group" style="display: flex; justify-content: center">
            <button class="btn-sm btn-success"><i class="fa fa-save"></i>&nbsp; Salvar</button>
        </div>
    </form>
</div>

<div>
    <a asp-action="List">Voltar para a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        var mensagem = "@ViewData["Mensagem"]";
        var mensagemErro = "@ViewData["MensagemErro"]";
    </script>

    <script>
        //Lógica utilizada para exibir as mensagens de sucesso ou erro ao salvar os dados.
        if (mensagem != "") {
            MensagemOK(mensagem);
        }
        if (mensagemErro != "") {
            MensagemErro(mensagemErro);
        }
    </script>
}